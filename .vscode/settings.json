{
    /* VSCode Core */
    // Editor
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
    },
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.hideCursorInOverviewRuler": true,
    "editor.hover.delay": 500,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.renderWhitespace": "none",
    "editor.rulers": [
        {
            "color": "#CCCCCC66",
            "column": 100
        }
    ],
    "editor.showFoldingControls": "always",
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.trimAutoWhitespace": false,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|\"';:,.<>/?_",
    // Explorer
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "type",
    // Files
    "files.eol": "\n",
    "files.exclude": {
        "*.lock": true,
        "**/__pycache__": true,
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.mypy_cache": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.vscode-test": true,
        "**/*.class": true,
        "**/*.code-workspace": true,
        "**/desktop.ini": true,
        "**/node_modules": true,
        "LICENSE": true,
        "package-lock.json": true
    },
    "files.insertFinalNewline": true,
    // Search
    "search.exclude": {
        "**/dist/**": true
    },
    "search.showLineNumbers": true,
    "search.smartCase": true,
    // Terminal
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.env.windows": {
        "CMDER_ROOT": "C:\\Users\\debom\\Documents\\Apps\\Cmder"
    },
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontFamily": "Hack NF, Anonymice NF",
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "/k C:\\Users\\debom\\Documents\\Apps\\Cmder\\vendor\\init.bat"
    ],
    // Workbench
    "workbench.activityBar.visible": true,
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#AB47BC",
        "list.activeSelectionForeground": "#AB47BC",
        "list.inactiveSelectionForeground": "#AB47BC",
        "list.highlightForeground": "#AB47BC",
        "scrollbarSlider.activeBackground": "#AB47BC50",
        "editorSuggestWidget.highlightForeground": "#AB47BC",
        "textLink.foreground": "#AB47BC",
        "progressBar.background": "#AB47BC",
        "pickerGroup.foreground": "#AB47BC",
        "tab.activeBorder": "#AB47BC",
        "notificationLink.foreground": "#AB47BC",
        "editorWidget.resizeBorder": "#AB47BC",
        "editorWidget.border": "#AB47BC",
        "settings.modifiedItemIndicator": "#AB47BC",
        "settings.headerForeground": "#AB47BC",
        "panelTitle.activeBorder": "#AB47BC",
        "breadcrumb.activeSelectionForeground": "#AB47BC",
        "menu.selectionForeground": "#AB47BC",
        "menubar.selectionForeground": "#AB47BC",
        "editor.findMatchBorder": "#AB47BC",
        "selection.background": "#AB47BC40"
    },
    "workbench.colorTheme": "Monokai ST3",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.panel.defaultLocation": "right",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    // Window
    "window.closeWhenEmpty": false,
    "window.zoomLevel": 0,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    
    
    /* VSCode Features */
    "breadcrumbs.enabled": false,
    "git.enableSmartCommit": true,
    "liveshare.allowGuestDebugControl": true,
    "timeline.excludeSources": [],
    
    
    /* Language Settings */
    // C++
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.updateChannel": "Insiders",
    
    // Golang
    "[go]": {
        "editor.formatOnSave": false
    },
    "go.formatTool": "gofmt",
    "go.lintOnSave": "off",
    "go.useLanguageServer": true,
    "go.vetOnSave": "off",
    
    // Java
    "java.codeGeneration.generateComments": true,
    "java.home": "C:\\Program Files\\RedHat\\java-12-openjdk-12.0.2-1",
    
    // JavaScript
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    
    // JSON
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "json.format.enable": false,
    "json.schemas": [
        {
            "fileMatch": ["manifest.json"],
            "url": "http://json.schemastore.org/chrome-manifest"
        }
    ],

    // Pug
    "puglint.enable": true,
    "puglint.run": "onSave",
    "pugvuebeautify.tabSize": 2,
    "pugvuebeautify.omitDiv": true,
    
    // Python
    "python.formatting.provider": "none",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Args": [
        "--ignore=E115, E127, E128, E203, E252, E261, E265, E301, E302, E305, E306, E402, E501, E731, E741, F401, F403, F405, F722, W291, W292, W293, W605"
    ],
    "python.linting.flake8Enabled": true,
    "python.languageServer": "Microsoft",
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--follow-imports=silent",
        "--show-column-numbers",
        "--cache-dir=nul"
    ],
    "python.linting.mypyEnabled": true,
    
    // Stylus
    "stylusSupremacy.alwaysUseZeroWithoutUnit": true,
    "stylusSupremacy.insertBraces": false,
    "stylusSupremacy.insertSemicolons": false,
    "stylusSupremacy.insertParenthesisAroundIfCondition": false,
    
    // TypeScript
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "typescript.format.enable": false,
    "typescript.suggest.enabled": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    
    // Vue
    "[vue]": {
        "editor.formatOnSave": true,
    },
    
    
    /* Extensions */
    // Code Runner
    "code-runner.clearPreviousOutput": true,
    "code-runner.executorMap": {
        "java": "cd $dir && javac $fileName && java $fileName",
        "ocaml": "ocaml $fileName"
    },
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    
    // ESLint
    "eslint.validate": [
        "javascript",
        "typescript",
        "vue"
    ],
    
    // Leetcode
    "leetcode.defaultLanguage": "python3",
    "leetcode.workspaceFolder": "C:\\Code\\Leetcode",
    "leetcode.hint.configWebviewMarkdown": false,
    "leetcode.hint.commentDescription": false,
    "leetcode.hint.commandShortcut": false,
    "leetcode.showDescription": "Both",
    
    // Material Theme
    "materialTheme.accent": "Purple",
    
    // OWScript
    "owscript.clipboard": true,
    "owscript.path": "C:\\Code\\Languages\\OWScript",
    
    // Prettier
    "prettier.singleQuote": true,
    
    // Project Manager
    "projectManager.groupList": true,
    
    // Sync
    "sync.gist": "9ef75fb5de18d6f7c6eda6df6569ddd8",
    
    // Vetur
    "vetur.format.options.tabSize": 4,
    "vetur.useWorkspaceDependencies": true,
    "vetur.validation.script": false,
    
    // VSIntellicode
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // UNORGANIZED
    "": "",
}
